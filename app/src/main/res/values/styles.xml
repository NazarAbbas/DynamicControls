<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_theme_color</item>
        <item name="colorPrimaryDark">@color/app_theme_color</item>
        <item name="colorAccent">@color/app_theme_color</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="MyLibTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_theme_color</item>
        <item name="colorPrimaryDark">@color/app_theme_color</item>
        <item name="colorAccent">@color/app_theme_color</item>
    </style>

    <style name="BlueActionBarTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_theme_color</item>
        <item name="colorPrimaryDark">@color/app_theme_color</item>
        <item name="colorAccent">@color/app_theme_color</item>
        <item name="windowActionBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/app_theme_color</item>
    </style>

</resources>
