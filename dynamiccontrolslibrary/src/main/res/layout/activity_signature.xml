<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:orientation="vertical">
        <!--    <com.williamww.silkysignature.views.SignaturePad
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/signaturePad"/>-->
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_signature_heading"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Signature"
            android:textColor="@color/Black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <com.williamww.silkysignature.views.SignaturePad xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/signaturePad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:penColor="@android:color/black" />
        <!--<ImageView
            android:id="@+id/img_signature"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <!-- <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/clearButton"
             android:text="Clear"
             android:layout_weight="1"
             android:textColor="@color/White"
             android:background="@color/sky_blue_light"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_border_primary_color_background">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ripple_effect_white_color"
                android:text="@string/clear"
                android:textColor="@color/white"
                android:textStyle="bold" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
           android:background="@drawable/rounded_border_primary_color_background">

            <Button
                android:id="@+id/btn_done"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:text="@string/done"
                android:background="@drawable/ripple_effect_white_color"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
        <!--    <Button
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_next"
                android:text="Done"
                android:layout_weight="1"
                android:textColor="@color/White"
                android:background="@color/sky_blue_light"/>-->


    </LinearLayout>

</RelativeLayout>

